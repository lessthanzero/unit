dark-color = #0E0E0E
light-color = #F4F4F4
mobile-padding = 1.5rem
noto-light = 'Noto Sans Light', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
noto-regular = 'Noto Sans Regular', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif

@font-face
  font-family: 'Noto Sans Light'
  font-weight: light
  font-style: normal
  src: url('../fonts/NotoSans-Light.ttf') format('truetype');
  
@font-face
  font-family: 'Noto Sans Regular'
  font-weight: normal
  font-style: normal
  src: url('../fonts/NotoSans-Regular.ttf') format('truetype');

*
  transition: all .33s ease-out
  
html, body
  height: 100%

body
  display: flex
  flex-direction: column
  background: dark-color
  font-family: noto-light
  font-weight: normal
  font-size: 16px
  line-height: 1.375rem
  color: light-color
  margin: 0
  padding: 0
  
.wrapper
  flex: 1 0 auto

_:-ms-input-placeholder, :root main
  display: block
  
.bolder
  font-family: noto-regular
  
header, footer, .content
  padding: 0 mobile-padding
  
header
  height: 4rem
  margin: 0
  display: flex
  align-items: center
  & > .menu
    width: 100%
    height: 1.5rem
    display: flex
    justify-content: space-between
    & > h1
      margin: 0
      line-height: 1.5rem
      
    & > .unit_logo
      width: 1.25rem
      height: 100%
      background-position: center center
      background-repeat: no-repeat
      background: url(../img/outline/unit-logo.svg)
      &.filled
        background: url(../img/fill/unit-logo.svg)
    & > .unit_setup
      width: 1.5rem
      height: 100%
      background-position: center center
      background-repeat: no-repeat
      background: url(../img/outline/gear.svg)
      &.filled
        background: url(../img/fill/gear.svg)
        

h1
  margin-bottom: 1.5rem
  font-size: 2rem
  font-family: noto-regular
  line-height: 2.6875rem
  letter-spacing: -0.03

h2
  font-size: 1rem
  font-family: noto-regular
  margin-top: 2.5rem
  margin-bottom: 1.375rem
  
p
  margin: 0 0 1.375rem
  &.tagline
    margin: 0 0 2.5rem

a
  color: light-color
  &:hover
    color: darken(light-color, 25%)
  &.pseudo-button
    border: 1px solid light-color
    border-radius: 0.375rem
    border-color: light-color
    padding: 0.5rem 1rem
    margin: 0 1rem 0 0
    text-decoration: none
    font-family: noto-regular
    &:hover
      background: light-color
      color: dark-color
    &.secondary
      opacity: 0.5
   
.pseudo-button__holder
  margin: 1.5rem 0 0
  display: flex
  justify-content: flex-start 
    
ol
  padding: 0 0 0 1.25rem
  margin: 1.375rem 0 0.5rem
  & > li
    margin: 0

picture
  display: block
  width: 100%
  height: 6.9375rem
  background: light-color
  &:nth-child(2n+1)
    margin-bottom: 2.5rem
  &.hand
    height: 100%
    background: none
    margin-bottom: 0
  
img
  width: 100%
  height: 100%
  object-fit: contain
  .hand > &
    margin-top: 2vh
  
footer
  flex-shrink: 0.5
  padding: 4rem mobile-padding mobile-padding
  & > p
    margin: 0
    
.landing
  height: 40vh
    
.landing ~ footer
  height: 50vh
  padding: 0

