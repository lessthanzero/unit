dark-color = #0E0E0E
light-color = #F4F4F4
faded-color = darken(light-color, 85%)
grayish = darken(light-color, 50%)
mobile-padding = 1.5rem
desktop-padding = 10vw
noto-light = 'Noto Sans Light', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
noto-regular = 'Noto Sans Regular', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif

@font-face
  font-family: 'Noto Sans Light'
  font-weight: light
  font-style: normal
  src: url('../fonts/NotoSans-Light.ttf') format('truetype');
  
@font-face
  font-family: 'Noto Sans Regular'
  font-weight: normal
  font-style: normal
  src: url('../fonts/NotoSans-Regular.ttf') format('truetype');

*
  transition: all .33s ease-out
  
html, body
  height: 100%

body
  display: flex
  flex-direction: column
  background: dark-color
  font-family: noto-light
  font-weight: normal
  font-size: 16px
  line-height: 1.375rem
  color: light-color
  margin: 0
  padding: 0
  
.hidden
  display: none
  
.wrapper
  flex: 1 0 auto
  
.setup .wrapper
  height: auto

_:-ms-input-placeholder, :root main
  display: block
  
.bolder
  font-family: noto-regular
  
header, .content
  padding: 0 mobile-padding
  
header
  height: 4rem
  margin: 0
  display: flex
  align-items: center
  & > .menu
    width: 100%
    height: 1.5rem
    display: flex
    justify-content: space-between
    & > h1
      margin: 0
      line-height: 1.5rem
      
    & > .unit_logo
      width: 1.25rem
      height: 100%
      background-position: center center
      background-repeat: no-repeat
      background: url(../img/outline/unit-logo.svg)
      &.filled
        background: url(../img/fill/unit-logo.svg)
    & > .unit_setup
      width: 1.5rem
      height: 100%
      background-position: center center
      background-repeat: no-repeat
      background: url(../img/outline/gear.svg)
      &.filled
        background: url(../img/fill/gear.svg)
        

h1
  margin-bottom: 1.5rem
  font-size: 2rem
  font-family: noto-regular
  line-height: 2.6875rem
  letter-spacing: -0.03

h2
  font-size: 1rem
  font-family: noto-regular
  margin-top: 2.5rem
  margin-bottom: 1.375rem
  
p
  margin: 0 0 1.375rem
  &.tagline
    margin: 0 0 2.5rem

a
  color: light-color
  &:hover
    color: grayish
  &.pseudo-button
    border: 1px solid light-color
    border-radius: 0.375rem
    border-color: light-color
    padding: 0.5rem 1rem
    margin: 0 1rem 0 0
    text-decoration: none
    font-family: noto-regular
    &:hover
      background: light-color
      color: dark-color
    &.secondary
      color: grayish
      border-color: grayish
      &:hover
        background: grayish
        color: dark-color
   
.pseudo-button__holder
  margin: 1.5rem 0 0
  display: flex
  justify-content: flex-start 
    
ol
  padding: 0 0 0 1.25rem
  margin: 1.375rem 0 0.5rem
  & > li
    margin: 0

picture
  display: block
  width: 100%
  height: 6.9375rem
  background: light-color
  &:nth-child(2n+1)
    margin-bottom: 2.5rem
  &.hand
    height: 100%
    background: none
    margin-bottom: 0

img
  width: 100%
  height: 100%
  object-fit: cover
  .hand > &
    margin: 0
    padding: 0
    object-position: 0 40%
  
footer
  flex-shrink: 0.5
  padding: 4rem mobile-padding mobile-padding
  & > p
    margin: 0
    

.landing
  display: flex
& > .wrapper
  height: 50vh
    
.landing > footer
  height: 100vh
  padding: 0
  
// App

.app .content
  padding: 0
  

.input-container__field, .output-container__field
  height: calc( (100vh - 8rem)/4 )
  max-height: 4rem
  border-left: none
  border-right: none
  border-top: 1px solid faded-color
  border-bottom: 1px solid faded-color
    
.input-container
  font-size: 2rem
  line-height: 1.34375rem
  .input-container__field
    display: flex
      
.output-container
  font-size: 2rem
  line-height: 1.34375rem
  position: relative
  .output-container__field
    border-top: none
    display: flex

.keypad
  display: flex
  flex-wrap: wrap
  // justify-content: space-evenly
  align-content: stretch
  &.hidden
    display: none
  .key
    box-sizing: border-box
    width: calc(100vw/3)
    height: calc( (100vh - 8rem)/4 )
    max-height: 4rem
    border-top: none
    border-left: none
    border-right: 1px solid faded-color
    border-bottom: 1px solid faded-color
    border-collapse: collapse
    text-align: center
    line-height: 4rem
    user-select: none
    &.inactive
      color: faded-color
    &:nth-child(1), &:nth-child(4)
      border-left: 1px solid faded-color
      

input, button, .result
  background: dark-color
  font-size: 2rem
  font-family: noto-light
  line-height: 4rem
  // border: 0 solid darken(light-color, 90%)
  color: light-color
  box-sizing: border-box
    
input, .result
  height: 100%
  width: calc((2/3)*100vw - 1px)
  border: none
  outline: none
  line-height: 4rem
  padding: 0 1rem
  text-align: right
  
button
  height: 100%
  width: calc(100vw/3 + 1px)
  border-left: 1px solid faded-color
  border-right: none
  border-top: none
  border-bottom: none
  outline: none
  user-select: none;
  
.output-container__error
  width: 100%
  height: calc( (100vh - 8rem)/4 )
  max-height: 4rem
  position: absolute
  top: 0.05rem
  background: faded-color
  display: flex
  align-items: center
  justify-content: center
  &.hidden
    display: none
  & p
    font-size: 1rem
    line-height: 1.375rem
    text-align: center
    color: light-color
    margin: 0
    
.landing .likely
  width: 7.25rem
  display: flex
  justify-content: flex-end
  
/* Media Queries */

@media (max-width: 20rem)

  .hand
    object-fit: cover
    & > img  
      object-position: 55% 0

  .pseudo-button
    font-size: 0.75rem
    
@media (max-height: 34rem)
  // trying to fix Opera Mini
  .hand > img
    object-position: 55% -250%

@media (min-width: 64rem)
  
  footer
    padding: 4rem desktop-padding 1.5rem
  
  .landing
    flex-direction: row
    justify-content: space-evenly  
    & .wrapper
      flex: 0 1 auto
      height: 100vh
      padding: 0

  .landing footer
    padding: 0

  .landing header, .landing .content
    padding: 0 5vw
  
  header, .content
    padding: 0 desktop-padding
    
  .hand > img
    object-position: 0 33%


